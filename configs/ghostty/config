font-family = JetBrains Mono
theme = tokyonight-storm
# theme = 0x96f
# If you want to avoid text that is difficult to read, a value of 3 or higher is a good value. The higher the value, the more likely that text will become black or white.
minimum-contrast = 3.0


# ==========================================
# TMUX-STYLE KEYBINDINGS (Ctrl-b as leader)
# ==========================================
# Matches tmux.conf from /Users/josephhaaga/Documents/dotfiles/configs/tmux/tmux.conf

# Split creation (matching tmux: | for vertical, - for horizontal)
keybind = ctrl+b>shift+backslash=new_split:right    # | creates vertical split (side-by-side)
keybind = ctrl+b>minus=new_split:down               # - creates horizontal split (stacked)

# Vim-style pane navigation (matching tmux: h/j/k/l)
keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:down
keybind = ctrl+b>k=goto_split:up
keybind = ctrl+b>l=goto_split:right

# Last window/tab (matching tmux: ^)
keybind = ctrl+b>shift+6=previous_tab               # ^ goes to last tab

# New window/tab (matching tmux: c)
keybind = ctrl+b>c=new_tab                          # c creates new tab

# Close current split (matching tmux: x)
keybind = ctrl+b>x=close_surface

# Reload config (matching tmux: r)
keybind = ctrl+b>r=reload_config

# Zoom/unzoom split (matching tmux: z)
keybind = ctrl+b>z=toggle_split_zoom

# Alt+Arrow navigation WITHOUT prefix (matching tmux Alt-Arrow bindings)
keybind = alt+arrow_left=goto_split:left
keybind = alt+arrow_right=goto_split:right
keybind = alt+arrow_up=goto_split:up
keybind = alt+arrow_down=goto_split:down

# Tab navigation
keybind = ctrl+b>n=next_tab                         # next tab
keybind = ctrl+b>p=previous_tab                     # previous tab
keybind = ctrl+b>1=goto_tab:1                       # jump to tab 1
keybind = ctrl+b>2=goto_tab:2                       # jump to tab 2
keybind = ctrl+b>3=goto_tab:3                       # jump to tab 3
keybind = ctrl+b>4=goto_tab:4                       # jump to tab 4
keybind = ctrl+b>5=goto_tab:5                       # jump to tab 5
keybind = ctrl+b>6=goto_tab:6                       # jump to tab 6
keybind = ctrl+b>7=goto_tab:7                       # jump to tab 7
keybind = ctrl+b>8=goto_tab:8                       # jump to tab 8
keybind = ctrl+b>9=goto_tab:9                       # jump to tab 9

# Send ctrl+b to terminal (double-tap to escape leader)
keybind = ctrl+b>ctrl+b=text:\x02

# Split resizing (tmux-style with Shift+hjkl)
keybind = ctrl+b>shift+h=resize_split:left,10
keybind = ctrl+b>shift+j=resize_split:down,10
keybind = ctrl+b>shift+k=resize_split:up,10
keybind = ctrl+b>shift+l=resize_split:right,10

# Equalize splits
keybind = ctrl+b>e=equalize_splits

# Popup-style splits (matching tmux display-popup bindings)
# Note: Ghostty doesn't support popups, so these create full splits instead
keybind = ctrl+b>ctrl+y=new_split:right             # lazygit (was popup in tmux)
keybind = ctrl+b>ctrl+p=new_split:right             # ipython (was popup in tmux)
keybind = ctrl+b>ctrl+t=new_split:right             # terminal (was popup in tmux)
keybind = ctrl+b>ctrl+j=new_split:right             # journal (was popup in tmux)


# ==========================================
